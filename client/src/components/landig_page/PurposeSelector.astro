---
import { BookOpen, Lightbulb, GraduationCap, Star } from "lucide-react";
---

<section
    class="w-full flex flex-col lg:flex-row items-center justify-between gap-6 p-6 mt-8 md:mt-12 border border-[#b4b4b4] rounded-xl bg-white shadow-sm"
>
    <!-- Título -->
    <div class="text-center lg:text-left flex-shrink-0">
        <h2 class="font-semibold text-xl sm:text-2xl lg:text-2xl leading-tight">
            ¿Qué te trae a <span class="text-[#4115df] font-bold">Instructiva</span> hoy?
        </h2>
    </div>

    <!-- Botones -->
    <div class="flex flex-col sm:flex-row flex-wrap justify-center lg:justify-end gap-3 w-full lg:w-auto">
        <!-- Botón principal -->
        <button
            class="flex items-center justify-center gap-2 bg-[#4115df] text-white px-4 py-3 sm:py-2 rounded-lg hover:bg-[#010089] transition-all duration-200 w-full sm:w-auto min-w-[200px] sm:min-w-0 flex-1 sm:flex-none"
        >
            <BookOpen className="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
            <span class="text-sm sm:text-base whitespace-nowrap">Ver instructivos de GITSE</span>
        </button>

        <!-- Botones secundarios -->
        <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
            <button
                class="flex items-center justify-center gap-2 border border-[#4115df] text-[#4115df] px-4 py-3 sm:py-2 rounded-lg hover:bg-blue-50 transition-all duration-200 w-full sm:w-auto flex-1"
            >
                <Lightbulb className="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span class="text-sm sm:text-base">Aprender</span>
            </button>

            <button
                class="flex items-center justify-center gap-2 border border-[#4115df] text-[#4115df] px-4 py-3 sm:py-2 rounded-lg hover:bg-blue-50 transition-all duration-200 w-full sm:w-auto flex-1"
            >
                <GraduationCap className="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span class="text-sm sm:text-base">Enseñar</span>
            </button>

            <button
                class="flex items-center justify-center gap-2 border border-[#4115df] text-[#4115df] px-4 py-3 sm:py-2 rounded-lg hover:bg-blue-50 transition-all duration-200 w-full sm:w-auto flex-1"
            >
                <Star className="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span class="text-sm sm:text-base">Ganar competencias</span>
            </button>
        </div>
    </div>
</section>
