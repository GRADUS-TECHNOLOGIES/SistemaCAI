---
import {
    Factory,
    Cog,
    Truck,
    Briefcase,
    Hand,
    Leaf,
    Utensils,
    Zap,
} from "lucide-react";

const productos = [
    { nombre: "Ingeniería Industrial", icono: Factory },
    { nombre: "Mecatrónica", icono: Cog },
    { nombre: "Logística", icono: Truck },
    { nombre: "Gestión empresarial", icono: Briefcase },
    { nombre: "Proyectos especiales", icono: Hand },
    { nombre: "Energías renovables", icono: Leaf },
    { nombre: "Alimentos", icono: Utensils },
    { nombre: "Electricidad y electrónica", icono: Zap },
];
---

<section class="w-full rounded-2xl mt-8">
    <p class="text-lg mb-2">Equipamiento para laboratorios</p>
    <h2 class="text-7xl font-bold mb-8">Nuestros productos</h2>

    <!-- Grid de productos -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        {
            productos.map(({ nombre, icono: Icon }) => (
                <div class="flex items-center gap-3 bg-white p-4 rounded-xl border border-gray-200 hover:border-[#1f497d] hover:shadow-lg transition-all">
                    <div class="bg-[#1f497d] text-white p-3 rounded-lg">
                        <Icon className="w-8 h-8" />
                    </div>
                    <p class="font-medium text-gray-800">{nombre}</p>
                </div>
            ))
        }
    </div>

    <!-- Botón de cotización -->
    <button
        class="flex items-center gap-2 bg-[#1f497d] text-white px-6 py-3 rounded-lg font-medium hover:bg-[#010089] transition-all"
    >
        Realizar cotización →
    </button>
</section>
