---
const roles = [
    {
        title: "Alumno",
        description: "De institución pública o privada.",
        img: "./assets/backgrounds/B2.svg",
    },
    {
        title: "Profesor",
        description: "De institución pública o privada.",
        img: "./assets/backgrounds/B3.svg",
    },
];
---

<section class="w-full bg-[#ededed] p-8 rounded-2xl shadow-sm mt-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
        <!-- Columna izquierda -->
        <div>
            <h2 class="text-7xl font-bold mb-8">Elige tu Rol</h2>
            <button
                class="flex items-center gap-2 bg-[#1f497d] text-white px-6 py-3 rounded-lg font-medium hover:bg-[#cc9900] transition-all"
            >
                <a href="/iniciar-sesion">Iniciar sesión →</a>
            </button>
        </div>

        <!-- Columna derecha -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            {
                roles.map((r) => (
                    <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all overflow-hidden cursor-pointer">
                        <img
                            src={r.img}
                            alt={r.title}
                            class="w-full h-50 object-cover"
                        />
                        <div class="p-5">
                            <h3 class="text-xl font-semibold">{r.title}</h3>
                            <p class="text-lg">{r.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
