---
const robot = "./assets/icons/IIA.svg";
---

<section
    class="w-full mt-12 bg-[#4115df] rounded-2xl p-8 flex flex-col md:flex-row items-center justify-between overflow-hidden"
>
    <div>
        <h2 class="text-7xl font-bold text-white">
            Conoce a <span class="text-transparent stroke-white font-extrabold outline-text">InstructivIA</span>
        </h2>
    </div>

    <div class="flex items-center gap-4 mt-6 md:mt-0">
        <img
            src={robot}
            alt="InstructivIA"
            class="w-40 md:w-48 lg:w-56 object-contain animate-bounce-slow"
        />
    </div>
</section>
